CC = cc

CFLAGS = -Wall -Wextra -Werror

NAME = push_swap

SRCS = 		srcs/ft_isdigit.c\
		srcs/parsing.c\
		srcs/operations.c\
		srcs/main.c\
		srcs/ft_error.c\
		srcs/free_me.c\
		srcs/presort.c\
		srcs/minisort.c\
		srcs/three_sort.c\
		srcs/radix.c\
		srcs/ft_str_isdigit.c

INCLUDE = library/push_swap.h


OBJECTS = $(SRCS:.c=.o)

all: $(NAME)
	
