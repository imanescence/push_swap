.c.o : 
	@$(CC) $(CFLAGS) -c -o $(<:.c=.o) $<
	@echo "\x1b[38;5;51m(ﾉ◕ヮ◕)ﾉ*:･ﾟ✧ \x1b[38;5;201mCompiling... \x1b[38;5;51m✧ﾟ･: *ヽ(◕ヮ◕ヽ)"

$(NAME): $(OBJECTS) $(INCLUDE)
	@$(CC) $(CFLAGS) -o $(NAME) $(SRCS)	

clean:
	@rm -rf $(OBJECTS)
	@echo "\x1b[42m\x1b[38;5;0m(~˘▾˘)~ Cleaning... ~(˘▾˘~)"

fclean:clean
	@rm -rf $(NAME)

re: fclean all


.PHONY: all clean fclean re 
